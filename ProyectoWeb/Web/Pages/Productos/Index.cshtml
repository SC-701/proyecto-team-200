@page
@model Web.Pages.Productos.IndexModel
@{


}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
<head>
    <link href="~/css/tienda.css" rel="stylesheet" />
    <link href="~/css/slider.css" rel="stylesheet" />
    <link href="~/css/sidebar.css" rel="stylesheet" />
</head>
<body>
    <div id="carouselInformativo" class="carousel slide mb-5" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-inner">
            <div class="carousel-item active position-relative">
                <img src="https://marshallwebb.com/wp-content/uploads/2024/08/ecommerce1.jpg" class="d-block w-100 img-carousel" alt="...">
                <div class="overlay"></div>
                <div class="carousel-caption text-start text-white">
                    <h2 class="animate-text">¡Bienvenido!</h2>
                    <p class="animate-text-delay">Explorá las mejores ofertas del ecommerce</p>
                </div>
            </div>
            <div class="carousel-item position-relative">
                <img src="https://marshallwebb.com/wp-content/uploads/2024/08/ecommerce1.jpg" class="d-block w-100 img-carousel" alt="...">
                <div class="overlay"></div>
                <div class="carousel-caption text-start text-white">
                    <h2 class="animate-text">Ofertas semanales</h2>
                    <p class="animate-text-delay">Grandes descuentos en productos seleccionados</p>
                </div>
            </div>
            <div class="carousel-item position-relative">
                <img src="https://marshallwebb.com/wp-content/uploads/2024/08/ecommerce1.jpg" class="d-block w-100 img-carousel" alt="...">
                <div class="overlay"></div>
                <div class="carousel-caption text-start text-white">
                    <h2 class="animate-text">Envíos gratis</h2>
                    <p class="animate-text-delay">En compras superiores a ₡25.000</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselInformativo" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselInformativo" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>


<div class="position-fixed top-0  start-0 sidebar-nav bg-white rounded-4 shadow-lg overflow-hidden" style="z-index: 1000; height: 95vh;">
   
    <nav class="px-2">
        
        <a href="#" class="nav-link d-flex align-items-center p-3 rounded-3 mb-1 text-decoration-none text-dark">
           
                <i class="fas fa-microchip "></i>
            
            <span class="nav-text">Gaming & Tech</span>
        </a>

        
        <a href="#" class="nav-link d-flex align-items-center p-3 rounded-3 mb-1 text-decoration-none text-dark">
            
                <i class="fas fa-gem "></i>
           
            <span class="nav-text">Moda & Estilo</span>
        </a>

       
        <a href="#" class="nav-link d-flex align-items-center p-3 rounded-3 mb-1 text-decoration-none text-dark">
           
                <i class="fas fa-robot "></i>
            
            <span class="nav-text">Smart Devices</span>
        </a>


        
    </nav>
</div>
    <div class="container py-4">
        <div class="container-fluid px-4 py-4">
            <div class="row row-cols-2 row-cols-sm-3 row-cols-lg-5 row-cols-xxl-5 g-3">


                @if (Model.productos != null && Model.productos.Any())
                {
                    foreach (var producto in Model.productos)
                    {
                        <div class="col">
                            <div class="card h-100 text-center shadow-sm">
                                <img src="@Html.DisplayFor(p => producto.ImagenUrl)" alt="..." class="img-hover" onclick="location.href='@Url.Page("./DetalleProducto", new { IdProducto = producto.IdProducto })'" style="cursor:pointer;" />

                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title mb-1">@Html.DisplayFor(p => producto.Nombre)</h5>
                                    <p class="card-text fw-bold text-dark mb-4">$@Html.DisplayFor(p => producto.Precio)</p>

                                    <div class="mt-auto d-flex justify-content-between px-4">
                                        <button class="btn btn-outline-secondary rounded-circle">
                                            <i class="bi bi-cart"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-warning w-100 text-center" role="alert">
                            Productos no disponibles
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>



    
    


<nav aria-label="Paginacion de productos">
    <ul class="pagination justify-content-center">
        @if (Model.ProductosPaginados.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" href="?PagesIndex=@(Model.ProductosPaginados.PageIndex - 1)&PageSize=5">Anterior</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">Anterior</span>
            </li>
        }

        @for (int i = 1; i <= Model.ProductosPaginados.TotalPages; i++)
        {
            <li class="page-item @(i == Model.ProductosPaginados.PageIndex ? "active" : "")">
                <a class="page-link" href="?PagesIndex=@i&PageSize=5">@i</a>
            </li>
        }

        @if (Model.ProductosPaginados.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" href="?PagesIndex=@(Model.ProductosPaginados.PageIndex + 1)&PageSize=5">Siguiente</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">Siguiente</span>
            </li>
        }
    </ul>
</nav>
</body>
